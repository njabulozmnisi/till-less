{
  "name": "tillless",
  "version": "0.1.0",
  "private": true,
  "description": "TillLess - Personal grocery shopping optimization for South African households",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/tillless.git"
  },
  "engines": {
    "node": "20.11.1",
    "pnpm": "9.14.2"
  },
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev": "nx run-many --target=serve --projects=web,api --parallel=2",
    "build": "nx run-many --target=build --all",
    "start": "nx run-many --target=start --all",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all -- --fix",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "type-check": "nx run-many --target=type-check --all",
    "test": "nx run-many --target=test --all",
    "test:coverage": "nx run-many --target=test:coverage --all",
    "test:e2e": "nx run-many --target=test:e2e --all",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint",
    "graph": "nx graph",
    "clean": "nx reset && rm -rf node_modules",
    "prisma:generate": "nx run database:prisma-generate",
    "prisma:migrate": "nx run database:prisma-migrate",
    "prisma:studio": "pnpm --filter @tillless/api prisma:studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky install"
  },
  "devDependencies": {
    "nx": "20.3.2",
    "@nx/eslint": "20.3.2",
    "@nx/eslint-plugin": "20.3.2",
    "@nx/js": "20.3.2",
    "@nx/nest": "20.3.2",
    "@nx/next": "20.3.2",
    "@nx/node": "20.3.2",
    "@nx/playwright": "20.3.2",
    "@nx/vite": "20.3.2",
    "@nx/workspace": "20.3.2",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "0.6.9",
    "eslint": "9.17.0",
    "typescript": "5.7.2",
    "vitest": "2.1.8",
    "@vitest/ui": "2.1.8",
    "husky": "9.1.7",
    "lint-staged": "15.2.11",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "pnpm": {
    "overrides": {
      "typescript": "5.7.2"
    }
  }
}

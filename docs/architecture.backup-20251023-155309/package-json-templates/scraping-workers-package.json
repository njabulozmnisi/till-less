{
  "name": "@tillless/ingestion-workers",
  "version": "0.1.0",
  "private": true,
  "description": "TillLess web scraping workers - Playwright + Temporal",
  "engines": {
    "node": "20.11.1",
    "pnpm": "9.14.2"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "scrape:checkers": "tsx src/scrapers/checkers/worker.ts",
    "scrape:pnp": "tsx src/scrapers/pnp/worker.ts",
    "scrape:shoprite": "tsx src/scrapers/shoprite/worker.ts",
    "scrape:woolworths": "tsx src/scrapers/woolworths/worker.ts",
    "scrape:makro": "tsx src/scrapers/makro/worker.ts",
    "temporal:worker": "tsx src/temporal/worker.ts",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "playwright": "1.49.1",
    "playwright-core": "1.49.1",
    "cheerio": "1.0.0",
    "@temporalio/client": "1.11.3",
    "@temporalio/worker": "1.11.3",
    "@temporalio/workflow": "1.11.3",
    "@temporalio/activity": "1.11.3",
    "@prisma/client": "6.2.1",
    "pg-boss": "10.1.5",
    "date-fns": "4.1.0",
    "pino": "9.5.0",
    "pino-pretty": "13.0.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "typescript": "5.7.2",
    "@types/node": "22.10.2",
    "@playwright/test": "1.49.1",
    "vitest": "2.1.8",
    "@vitest/ui": "2.1.8",
    "tsup": "8.3.5",
    "tsx": "4.19.2",
    "eslint": "9.17.0",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "prettier": "3.4.2"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": ["esm"],
    "target": "node20"
  }
}
